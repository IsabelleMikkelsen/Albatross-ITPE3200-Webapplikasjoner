@{
    ViewData["Title"] = "Logg inn";
}


<div class="d-flex justify-content-center align-items-center min-vh-100">
<div class="login-container mt-5 mb-5" style="max-width: 600px; width: 90%">
    <div class="card p-4 shadow-sm border-0">
        <h2 class="text-center mb-4" fw-bold>Logg inn</h2>
        <form>
  
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="off">
    </div>
    <div class="mb-3 form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">Remember me</label>
    </div>
    <div class="d-grid mt-4">  
        <a asp-controller="User" asp-action="Dashboard" class="btn btn-primary w-100">Logg inn</a>
    </div>
  
  </form>
  <p class="text-center mt-3">
      Har du ikke bruker? <a asp-controller="Account" asp-action="Register"> Registrer deg</a>
  </p>

    </div>
</div>










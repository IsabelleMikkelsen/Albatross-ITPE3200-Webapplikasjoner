@using Albatross.Models
@model Item

<!--http://localhost:5093/Item/create-->
<h2>Create new item</h2>

<form asp-action="Create">

<div class="form-group">
<label asp-for="Name">Name</label><span class="text-danger">*</span>
<input asp-for="Name" class="form-control" />
<span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
<label asp-for="Type">Type</label><span class="text-danger">*</span>
<input asp-for="Type" class="form-control" />
<span asp-validation-for="Type" class="text-danger"></span>
</div>

<div class="form-group">
<label asp-for="ImageUrl">Imageurl</label>
<input asp-for="ImageUrl" class="form-control" />
<span asp-validation-for="ImageUrl" class="text-danger"></span>
</div>

<button type="submit" class="btn btn-primary">Create</button>
<a asp-action="Table" class="btn btn-secondary">Back to Table View</a>
</form>

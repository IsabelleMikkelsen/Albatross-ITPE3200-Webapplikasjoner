@using Albatross.Models
@model Item

<h2>Delete item</h2>

<h3>Are you sure you want to delete this item?</h3>

<div>
    <h4>Item</h4>
    <hr />
    <dl class ="row">
        <dt class="col-sm-2">Item Id</dt>
        <dt class="col-sm-10">@Model.ItemId</dt> 

        <dt class="col-sm-2">Name</dt>
        <dt class="col-sm-10">@Model.Name</dt> 

        <dt class="col-sm-2">Type</dt>
        <dt class="col-sm-10">@Model.Type</dt> 

        <dt class="col-sm-2">Image URL</dt>
        <dt class="col-sm-10">@Model.ImageUrl</dt> 
    </dl>

<form asp-action="DeleteConfirmed" asp-route-itemid="@Model.ItemId" method="post">
    <button type ="submit" class="btn btn-primary">Delete</button>
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>
</form>

</div>
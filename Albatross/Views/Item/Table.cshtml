@using Albatross.ViewModels

@model ItemsViewModel

<!---<h1>List of Items (@Model.CurrentViewName View)</h1>-->
<!---<a href="/Item/Grid">Grid View</a>-->

<div class="container">
<!---Viser admintabell - kommenter ut for Ã¥ fjerne admin-->
 @await Html.PartialAsync("_ItemTable_Admin", Model.Items) <!--//*-->
    <h3>Player item table</h3>
    <table class='table table-striped'>
        <tr><th>Id</th><th>Name</th><th>Type</th><th>Images</th></tr>
        @foreach(var item in Model.Items)
        {
            <tr>
                <td>@item.ItemId</td>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td><img src="@item.ImageUrl" alt="imgitem" style="max-width: 80px; max-height: 80px;"/></td>
                <td></td>
            </tr>
        }
    </table>
</div>


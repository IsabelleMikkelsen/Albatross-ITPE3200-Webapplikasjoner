@using Albatross.ViewModels

@model ItemsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items Table</title>
    <!--Får ikke koblet til adminbutton.cs -- alt for rød se moduletop table--->
    <link rel="stylesheet" href="~/css/adminbutton.css" />
</head>
<body>
    <div class="container">
        <!-- Viser admin-tabellen -->
        @await Html.PartialAsync("_ItemTable_Admin", Model.Items)

        <!-- Spiller-tabell -->
        <h3>Player item table</h3>
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Images</th>
            </tr>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ItemId</td>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>
                        <img src="@item.ImageUrl" alt="imgitem" style="max-width: 80px; max-height: 80px;" />
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
@model Albatross.Models.ModuleTopic

@{
    ViewData["Title"] = "Delete Module Topic";
}

<h2>Delete Module Topic</h2>

<h3>Are you sure you want to delete this module topic?</h3>

<div>
    <h4>Module Topic</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Module Topic ID</dt>
        <dd class="col-sm-10">@Model.ModuleTopicId</dd>

        <dt class="col-sm-2">Module Topic Name</dt>
        <dd class="col-sm-10">@Model.ModuleTopicName</dd>

        <dt class="col-sm-2">Module ID</dt>
        <dd class="col-sm-10">@Model.ModuleId</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ModuleTopicId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>
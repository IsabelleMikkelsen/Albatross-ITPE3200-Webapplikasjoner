<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Albatross</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Albatross.styles.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm py-3">
            <div class="container">

                <a class="navbar-brand d-flex align-items-center text-decoration-none" asp-controller="Home" asp-action="Index">
                <span class="fw-bold text fs-4">Albatross</span>
                </a>

                 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class ="nav-item">
                    <a class= "nav-link text-teal fw-semibold @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                    asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class ="nav-item">
                    <a class= "nav-link text-teal fw-semibold @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")" 
                    asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class ="nav-item">
                    <a class= "nav-link text-teal fw-semibold @(ViewContext.RouteData.Values["action"]?.ToString() == "Community" ? "active" : "")" 
                    asp-controller="Home" asp-action="Community">Community</a>
                </li>
                <li class ="nav-item">
                    <a class= "nav-link text-teal fw-semibold @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")" 
                    asp-controller="Home" asp-action="Contact">Contact</a>  
                </li>
                 <li class ="nav-item">
                    <a class= "nav-link text-teal fw-semibold @(ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")" 
                    asp-controller="Home" asp-action="Privacy">Privacy</a>  
                </li>
                 <li class ="nav-item">
                    <a class= "nav-link text-teal fw-semibold @(ViewContext.RouteData.Values["action"]?.ToString() == "Resources" ? "active" : "")" 
                    asp-controller="Home" asp-action="Resources">Resources</a>  
                </li>
            </ul>
                
              
             <div class="d-flex">
    @if (User.Identity.IsAuthenticated)
    {
        <!-- Vis brukernavn og Logout-knapp hvis brukeren er logget inn -->
        <span class="navbar-text me-2">Welcome, @User.Identity.Name!</span>
        <a asp-controller="User" asp-action="Dashboard" class="btn btn-outline-primary me-2 px-3">Dashboard</a>
        <a asp-controller="Item" asp-action="Table" class="btn btn-outline-info me-2 px-3">Inventory</a>
        <a asp-controller="ModuleTop" asp-action="Table" class="btn btn-outline-success me-2 px-3">Modules</a>
        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-outline-danger me-2 px-3">Logout</button>
        </form>
    }
    else
    {
        <!-- Vis Login og Sign Up-knapper hvis brukeren ikke er logget inn -->
        <a class="btn btn-outline-success me-2 px-3" asp-controller="Account" asp-action="Login">Login</a>
        <a class="btn btn-outline-success me-2 px-3" asp-controller="Account" asp-action="Register">Sign Up</a>
    }
</div>
                </div>
            </div>
        </nav>
 </header>
    <div class= "container-fluid px-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-white border-top py-4 mt-auto">
        <div class="container">
            <div class ="row text center text-md-start">
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold text-teal">Resources </h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-muted text-decoration-none">Blog</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Best practices</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Support</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Developers</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold text-teal">Explore</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-muted text-decoration-none">Design</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Prototyping</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">UX Design</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Networking</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold text-teal">Use Cases</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-muted text-decoration-none">About Us</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Careers</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Press</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-bold text-teal">Test</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-muted text-decoration-none">Fix your apple vision pro</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Free Iphone</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Get 100$ now</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Contact</a></li>
                    </ul>
                </div>
                
                </div>
            </div>
            <div class="text-center small text-muted">
                © 2025 Albatross — Learn Albanian Through Adventure!
            </div>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
                    
</body>
</html>

